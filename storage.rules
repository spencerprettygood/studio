rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User uploads (profile pictures, attachments)
    match /users/{userId}/{allPaths=**} {
      // Users can read their own files or public files
      allow read: if isAuthenticated() && 
                     (request.auth.uid == userId || 
                      resource.metadata.public == 'true');
      
      // Users can only upload to their own folder
      allow write: if isOwner(userId) &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      request.resource.contentType.matches('image/.*|application/pdf|text/.*');
      
      // Users can delete their own files
      allow delete: if isOwner(userId);
    }
    
    // Workspace uploads
    match /workspaces/{workspaceId}/{allPaths=**} {
      // Check workspace membership in Firestore
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Public assets (marketplace)
    match /public/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if false; // Admin only via service account
    }
  }
}